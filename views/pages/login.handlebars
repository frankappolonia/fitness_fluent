<div class="container d-flex justify-content-center">
    <div class="d-flex flex-column justify-content-between">
        <div class="card mt-3 p-5">
            <div>
                <p class="mb-1">Start managing your</p>
                <h1 class="mb-5 text-white">fitness journey with us!</h1>
            </div>
            <a class="btn btn-primary btn-large" href="/signup" role="button">Need to sign up?</a>
        </div>
        <form method="post" id="login-form">
        <div class="card two bg-white px-5 py-4 mb-3">
            <div class="form-group">
                <input type="text" class="form-control" id="username" name="username" required>
                <label class="form-control-placeholder" for="username">Username</label>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" required>
                <label class="form-control-placeholder" for="password">Password</label>
            </div>
            <div id="login-error-container" class="alert alert-danger" role="alert" >{{{error}}}</div>
            <div id="login-error-container2">{{{error2}}}</div>

            <button type="submit" class="btn btn-primary btn-block btn-lg mt-1 mb-2"><span>Log In</span></button>
        </div>
        </form>
    </div>
</div>