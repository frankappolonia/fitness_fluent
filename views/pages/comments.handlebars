<div class="container mt-5 mb-5">

  <div class="row height d-flex justify-content-center align-items-center card">
    <article id="post-thread">
      <section id="main-post">
        <h2 id="post-title">{{{title}}}</h2>
        <h3>Author: {{{poster.name}}}</h3>
        <hr>
        <p id="post-body">{{{body}}}</p>
      </section>
      <div id="main-post-error"></div>
    </article>

    <div class="col-md-7">

      <div class="card">

        <div class="p-3">

          <h4>Comments</h4>

        </div>

        <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">

          <img src="/public/images/stockProfile.png" class="rounded-circle mr-2 profilepic" alt="Stock profile picture">

          <div id="comment-form-container">
            <form method="post" id="new-comment-form">
              <label for="comment">Post</label>
              <input type="text" class="form-control" id="comment" name="comment" placeholder="Enter your comment...">
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div id="newComment-error">
              {{{error}}}
            </div>
          </div>

        </div>


        <div class="mt-2">

          {{#each comments}}
          <div class="d-flex flex-row p-3">

            <img src="/public/images/stockProfile.png" class="rounded-circle mr-3 profilepic" alt="stock profile picture">

            <div class="w-100">

              <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex flex-row align-items-center">
                  <span class="mr-2">{{{this.poster.name}}}</span>
                </div>
              </div>

              <p class="text-justify comment-text mb-0">{{{this.body}}}</p>

              <div class="d-flex flex-row user-feed">
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>
    </div>
  </div>
</div>